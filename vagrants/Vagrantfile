Vagrant.configure(2) do |config|

base_network = "172.16.31"

  # Win7ie10
  config.vm.define :Win7ie10 do |Win7ie10|
    # uncomment the lines below for a gui kali
    #config.vm.provider "virtualbox" do |v|
    #  v.gui = true
    #end
    Win7ie10.vm.box = "nwedlake/Windows7x64"
    Win7ie10.vm.network :private_network, ip: "#{base_network}.10"
    Win7ie10.vm.network "forwarded_port", guest: 22, host: 2222, host_ip: "0.0.0.0"
    Win7ie10.customize ["modifyvm", :id, "--vrde", "on"]
    Win7ie10.customize ["modifyvm", :id, "--vrdeport", "3389"] # change here to a free port
    
    #kali_mini.vm.provision "ansible" do |ansible|
    #  ansible.playbook = "kali-playbook.yml"
    #end
end
